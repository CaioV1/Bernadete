<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.digitalindividual.bernadete">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_brecho"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".PresentationActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RegisterPiece"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name=".Filter" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".NotificationActivity" />
        <activity android:name=".RegisterNotification"
            android:windowSoftInputMode="stateHidden"></activity>
    </application>

</manifest>